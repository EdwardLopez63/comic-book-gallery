@{
    Layout = null;

    var seriesTitle = "The Amazing Spider-Man";
    var issueNumber = 700;
    var description = "<p>Final issue! Witness the final hours of " +
                "Doctor Octopus' life and his one, last, great act of revenge! Even if Spider-Man survives... <strong>will Peter Parker?</strong></p>";
    var artists = new string[]
        {
            "Script: Dan Slott",
            "Pencils: Humberto Ramos",
            "Inks: Victor Olazaba",
            "Colors: Edgar Delgado",
            "Letters: Chris Eliopoulos"
        };

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        <h1>@seriesTitle</h1>
        <h2>Issue #@issueNumber</h2>

        <!--Used Html.Raw() since variable description has html within the c# code-->
        <!--otherwise it would display the html literally-->
        <h5>Description:</h5>
        <div>@Html.Raw(@description)</div>

        <!-- Used a FOREACH loop to make sure each artist IN variable artists is displayed properly-->
        <!-- Also included an IF statement if there are no artists in the artists ARRAY. Nothing will appear on screen if nothing is in the array.-->
        @if (artists.Length > 0) {
            <h5>Artists:</h5>
                    <div>
                        <ul>
                            @foreach (var artist in artists) {
                                <li>@artist</li>
                            }
                        </ul>
                    </div>
        }


    </div>
</body>
</html>
